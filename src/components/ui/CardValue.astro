---
type Props = {
    title: string;
    subTitle: string;
    content: string;
}

const { title, subTitle, content } = Astro.props;
---

<div class="card">
    <div class="card-content">
        <div class="front">
            <h2 class="title">{title}</h2>
            <p class="text-sm mt-2">
                {subTitle}
            </p>
            <div class="icon-container">
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 24 24"
                    width="32"
                    height="32"
                >
                    <path
                        d="M17.98,9.376,12,8.18V3.107A3.081,3.081,0,0,0,9.5.041,3,3,0,0,0,6,3V9.661L3.211,13.3a5.021,5.021,0,0,0,.249,6.794l2.4,2.425A5.036,5.036,0,0,0,9.414,24H17a5.006,5.006,0,0,0,5-5V14.279A5.013,5.013,0,0,0,17.98,9.376ZM20,19a3,3,0,0,1-3,3H9.414a3.022,3.022,0,0,1-2.134-.891l-2.4-2.428a3.03,3.03,0,0,1-.116-4.123L6,12.945V17a1,1,0,0,0,2,0V3a1,1,0,0,1,1.176-.985A1.082,1.082,0,0,1,10,3.107V9a1,1,0,0,0,.8.98l6.784,1.357A3.01,3.01,0,0,1,20,14.279Z"
                        fill="#ffffff"></path>
                </svg>
            </div>
        </div>
        <div class="back">
            <p class="text-sm">
                {content}
            </p>
        </div>
    </div>
</div>

<style>

    .card {
        perspective: 1000px;
    }

    .card-content {
        position: relative;

        width: 18.625rem;
        height: 22.4375rem;

        text-align: center;
        transform-style: preserve-3d;
        transition: transform 1s;
    }

    .card:hover .card-content {
        transform: rotateY(180deg);
    }

    .front,
    .back {
        position: absolute;

        display: flex;
        flex-direction: column;
        justify-content: space-between;
        align-items: center;

        width: 18.625rem;
        height: 22.4375rem;
        padding: 2rem 1.5rem 3.6rem 1.4rem;
        border-radius: 8px;

        color: #fff;
        background-color: #e3e3e318;
        box-shadow: 0px 10px 14px 0px #00000061;

        backface-visibility: hidden;
    }

    .title {
        font-size: 2rem;
        font-weight: 700;
        font-style: normal;
        line-height: 120%;
        letter-spacing: -0.04rem;
    }

    .front p, {
        font-size: 1rem;
    }

    .back p {
        font-size: 1.8rem;
        line-height: 120%;
        letter-spacing: -0.04rem;
    }
    /* Animación de pulso */
    @keyframes pulse {
        0% {
            transform: scale(1); /* Tamaño original */
        }
        50% {
            transform: scale(1.2); /* Crece al 120% */
        }
        100% {
            transform: scale(1); /* Regresa al tamaño original */
        }
    }

    /* Aplicar animación a los SVG */
    .icon-container svg {
        animation: pulse 1.5s infinite; /* Animación continua */
        transition: transform 0.3s ease-in-out;
    }

    /* Añadir efecto hover para acelerar el pulso */
    .icon-container:hover svg {
        animation: pulse 0.8s infinite; /* Acelerar el pulso al hacer hover */
    }

    .back {
        transform: rotateY(180deg);
    }
</style>
