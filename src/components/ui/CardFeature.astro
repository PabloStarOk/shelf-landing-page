---
import Touch from "@/icons/Touch.astro";
import { Image } from "astro:assets";

type Props = {
    title: string;
    description: string;
    image: ImageMetadata | string;
    id: string;
};

const { title, description, image, id } = Astro.props;

---

<div class="absolute" id={id}>
    <div class="card relative min-w-100 w-100 h-117 shadow">
        <article class="face front bg-background-brand-primary">
            <div class="grid place-content-end">
                <Touch />
            </div>
            <div class="flex flex-col h-auto gap-2">
                <div class="h-[270px] w-full">
                    <Image src={image} alt="GestiÃ³n de Inventarios Inteligente"/>
                </div>
                <h1 class="text-text-default-neutral text-3.5xl leading-[120%] text-center font-semibold">{title}</h1>
            </div>
        </article>


        <article class="face back bg-background-brand-primaryHover">
            <h1 class="text-text-default-neutral text-3.5xl leading-[120%] text-center font-semibold">{title}</h1>
            <p class="text-text-default-neutral text-left text-lg mt-5">
                { description }
            </p>
        </article>
    </div>
</div>


<style>
    .face{
        position: absolute;

        display: flex;
        flex-direction: column;
        gap: 0.5rem;

        width: 100%;
        height: 100%;
        border-radius: 0.5rem;
        padding: 2rem 3rem;

        cursor: pointer;
        backface-visibility: hidden;
        transition: .5s;
    }

    .front{
        transform: perspective(600px) rotateY(0deg);
    }

    .back{
        transform: perspective(600px) rotateY(180deg);
    }

    .card:hover .front {
        transform: perspective(600px) rotateY(180deg);
    }

    .card:hover .back {
        transform: perspective(600px) rotateY(360deg);
    }
</style>
