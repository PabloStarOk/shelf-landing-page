---
import Prototype1 from "@/images/prototype/Dashboard-1.webp";
import Prototype2 from "@/images/prototype/Main-2.webp";
import Prototype3 from "@/images/prototype/Sign-In-1.webp";
import LayoutSection from "@/layouts/LayoutSection.astro";
import Image from "astro/components/Image.astro";
---

<LayoutSection title="prototype" height={1117}>
    <div class="containerHeader">
        <h1 class="titleH1">Prototipo</h1>
        <p class="pText">Familiarizate con nuestros prototipos y prueba el poder de nuestro producto</p>
    </div>
    <div class="conainerImg">
        <div>
            <Image class="w-[31.25rem] h-[20.20263rem]" src={Prototype3} alt="Imagen del prototipo 3" >
        </div>
        <div>
            <Image class="w-[31.25rem] h-[20.20263rem]" src={Prototype1} alt="Imagen del prototipo 1" >
        </div>
        <div>
            <Image class="w-[31.25rem] h-[20.20263rem]" src={Prototype2} alt="Imagen del prototipo 2" >
        </div>
    </div>
    <div class="w-full flex items-center justify-center mt-[12.04rem]">
        <a target="_blank" href="https://www.figma.com/proto/7rtMxn8vtnQcU1xERYNl77/Shelf---Prototipo?node-id=261-1980&node-type=frame&t=6adDsXm7JZmLCdP9-1&scaling=scale-down&content-scaling=fixed&page-id=3%3A6&starting-point-node-id=261%3A1980&show-proto-sidebar=1" class="p-[1rem_1.5rem] text-center bg-background-brand-primary hover:bg-background-brand-primaryHover transition-all ease-in-out duration-300  rounded-[0.25rem] text-text-default-neutral font-normal text-[1.25rem]">
            Ver prototipo
        </a>
    </div>
</LayoutSection>

<style>
    .containerHeader{
        margin-top: 5.56rem;
        margin-bottom: 14rem;
    }

    .titleH1{
        color: #FFF;
        text-align: center;
        font-size: 3rem;
        font-style: normal;
        font-weight: 700;
        line-height: 120%;
        letter-spacing: -0.06rem;
    }

    .pText{
        color: #FFF;
        text-align: center;
        font-size: 1.25rem;
        font-style: normal;
        font-weight: 400;
        line-height: 120%;
        letter-spacing: -0.025rem;
    }

    .conainerImg{
        margin-inline: 2.5rem;
        width: auto;

        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: space-between;

        box-shadow: 2px 2px 4px 0px rgba(0, 0, 0, 0.25);

        overflow: auto;
    }

    /* .conainerImg::-webkit-scrollbar{
        background-color: transparent;
        height: 0;
    } */

</style>
