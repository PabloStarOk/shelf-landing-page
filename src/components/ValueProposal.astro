<style>
    h1 {
        text-align: center;
        font-size: 20px;
        font-weight: 900;
        color: #fff;
        margin: 50px 0px;
    }
    .content1 {
        grid-template-columns: repeat(3, minmax(0, 1fr));
        display: grid;
        justify-items: center;
        margin: 50px 50px;
    }
    .card {
        perspective: 1000px;
    }

    .card-content {
        width: 200px;
        height: 250px;
        text-align: center;
        position: relative;
        transform-style: preserve-3d;
        transition: transform 1s;
    }

    .card:hover .card-content {
        transform: rotateY(180deg);
    }

    .front,
    .back {
        position: absolute;
        font-family: "Poppins", sans-serif;
        width: 200px;
        height: 250px;
        backface-visibility: hidden;
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        align-items: center;
        padding: 50px 20px;
        border-radius: 8px;
        gap: 20px;
        color: #fff;
        background-color: #e3e3e318;
    }

    .titel {
        font-size: 14px;
        font-weight: 900;
    }
    svg {
        margin-top: 25px;
    }
    /* Animación de pulso */
    @keyframes pulse {
        0% {
            transform: scale(1); /* Tamaño original */
        }
        50% {
            transform: scale(1.2); /* Crece al 120% */
        }
        100% {
            transform: scale(1); /* Regresa al tamaño original */
        }
    }

    /* Aplicar animación a los SVG */
    .icon-container svg {
        animation: pulse 1.5s infinite; /* Animación continua */
        transition: transform 0.3s ease-in-out;
    }

    /* Añadir efecto hover para acelerar el pulso */
    .icon-container:hover svg {
        animation: pulse 0.8s infinite; /* Acelerar el pulso al hacer hover */
    }

    .back {
        transform: rotateY(180deg);
    }
</style>
